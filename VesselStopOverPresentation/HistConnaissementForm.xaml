                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.Resources>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header=" "></DataGridTextColumn>
                                            <DataGridTextColumn Header="Id. prof." Width="Auto" Binding="{Binding IdFP}">
