                    <GroupBox DockPanel.Dock="Bottom" FontSize="12" HeaderTemplate="{StaticResource DataTemplate4}" Background="#FAFAFA" Margin="0,12,0,2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
